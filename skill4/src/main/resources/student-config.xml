<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student" class="com.example.klu.xml.Student">

        <!-- Constructor Injection -->
        <constructor-arg value="101"/>
        <constructor-arg value="Jasvvanth"/>
        <constructor-arg value="Full Stack Development"/>
        <constructor-arg value="2025"/>

        <!-- Setter Injection -->
        <property name="course" value="Spring Framework"/>
        <property name="year" value="3"/>

    </bean>

</beans>
